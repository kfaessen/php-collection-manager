{
    "name": "collectie/manager-laravel",
    "description": "Laravel versie van de PHP Collectiebeheer-app voor Games, Films en Series",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Collectiebeheer Team"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "laravel/framework": "^11.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.8",
        "laravel/cashier": "^15.0",
        "laravel/socialite": "^6.0",
        "guzzlehttp/guzzle": "^7.2",
        "intervention/image": "^3.0",
        "spatie/laravel-permission": "^6.0",
        "spatie/laravel-backup": "^8.0",
        "spatie/laravel-activitylog": "^4.0",
        "spatie/laravel-translatable": "^6.0",
        "pusher/pusher-php-server": "^7.0",
        "simplesoftwareio/simple-qrcode": "^4.0",
        "robthree/twofactorauth": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": "phpunit",
        "check-syntax": "find . -name '*.php' -not -path './vendor/*' -exec php -l {} \\;",
        "deploy": [
            "echo 'Running deployment checks...'",
            "@check-syntax"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
} 