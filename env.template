# Collection Manager Environment Configuration

# Database Settings
DB_HOST=localhost
DB_NAME=collection_manager
DB_USER=collection_user
DB_PASS=your_secure_password

# Application Settings
APP_URL=http://localhost
APP_ENV=development
APP_DEBUG=true
APP_NAME="Collection Manager"

# Security Settings
SESSION_SECRET=your_random_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost/oauth.php

# OAuth Configuration (Facebook)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost/oauth.php

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME="Collection Manager"

# TOTP (Two-Factor Authentication) Settings
TOTP_ISSUER="Collection Manager"
TOTP_WINDOW=2

# API Configuration
API_ENABLED=true
API_AUTO_COVER_DOWNLOAD=true
API_CACHE_DURATION=3600
API_RATE_LIMIT_ENABLED=true

# IGDB API (Games)
IGDB_CLIENT_ID=your_igdb_client_id
IGDB_CLIENT_SECRET=your_igdb_client_secret
IGDB_ENABLED=true

# OMDb API (Movies/TV)
OMDB_API_KEY=your_omdb_api_key
OMDB_ENABLED=true

# TMDb API (Optional - High quality images)
TMDB_API_KEY=your_tmdb_api_key
TMDB_ENABLED=false

# OpenLibrary API (Books - No auth required)
OPENLIBRARY_ENABLED=true

# Spotify API (Music - Future feature)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_ENABLED=false

# Internationalization Settings
I18N_ENABLED=true
I18N_DEFAULT_LANGUAGE=nl
I18N_FALLBACK_LANGUAGE=en
I18N_AUTO_DETECT=true

# Push Notifications (Web Push)
PUSH_NOTIFICATIONS_ENABLED=true
VAPID_SUBJECT=mailto:admin@collectiebeheer.app
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Notification Settings
NOTIFICATION_DEFAULT_TTL=86400
NOTIFICATION_QUIET_HOURS_START=22:00
NOTIFICATION_QUIET_HOURS_END=08:00
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_CLEANUP_DAYS=90

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=uploads/

# Cache Settings
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600

# Logging Settings
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=30

# Performance Settings
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=false
ENABLE_CDN=false

# Development Settings (only for development)
DEV_ENABLE_PROFILER=false
DEV_SHOW_ERRORS=true
DEV_LOG_QUERIES=false 