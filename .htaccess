# OVH Optimized Apache Configuration for Collection Manager
# This configuration is optimized for OVH shared hosting

# Enable mod_rewrite
RewriteEngine On

# ==========================================
# SECURITY HEADERS & PROTECTION
# ==========================================

# Prevent access to sensitive files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<FilesMatch "\.(env|md|log|sql|json|yml|yaml|ini|lock)$">
    Require all denied
</FilesMatch>

# Protect includes directory (OVH compatible)
RewriteRule ^includes/ - [F,L]

# Blokkeer PHP-bestanden in uploads (OVH compatible)
<FilesMatch "^uploads/.*\.(php|php3|php4|php5|phtml)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security headers (OVH compatible)
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Content type sniffing protection
    Header set X-Content-Type-Options nosniff
    
    # Referrer policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Remove server signature
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# ==========================================
# PHP CONFIGURATION (OVH Compatible)
# ==========================================

<IfModule mod_php.c>
    # Memory and execution limits for OVH
    php_value memory_limit 256M
    php_value max_execution_time 60
    php_value max_input_time 60
    php_value post_max_size 50M
    php_value upload_max_filesize 10M
    php_value max_file_uploads 20
    
    # Session configuration
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.use_strict_mode 1
    
    # Error handling (production)
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/php_errors.log
    
    # Timezone
    php_value date.timezone Europe/Amsterdam
</IfModule>

# Alternative PHP configuration for newer OVH setups
<IfModule mod_php7.c>
    php_value memory_limit 256M
    php_value max_execution_time 60
    php_value post_max_size 50M
    php_value upload_max_filesize 10M
</IfModule>

<IfModule mod_php8.c>
    php_value memory_limit 256M
    php_value max_execution_time 60
    php_value post_max_size 50M
    php_value upload_max_filesize 10M
</IfModule>

# ==========================================
# CACHING & PERFORMANCE (OVH Optimized)
# ==========================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Documents
    ExpiresByType application/pdf "access plus 1 month"
    
    # HTML (short cache for dynamic content)
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Gzip compression (OVH compatible)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Alternative compression for older Apache versions
<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_dechunk Yes
    mod_gzip_item_include file \.(html?|txt|css|js|php|pl)$
    mod_gzip_item_include mime ^application/x-javascript.*
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

# ==========================================
# URL REWRITING & ROUTING
# ==========================================

# Redirect to public directory if not already in it
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /public/$1 [L,QSA]

# Force HTTPS in production (uncomment for production)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (optional - uncomment if needed)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Handle API endpoints
RewriteRule ^api/(.*)$ /public/api.php?endpoint=$1 [L,QSA]

# Handle OAuth endpoints
RewriteRule ^oauth/(.*)$ /public/oauth.php?action=$1 [L,QSA]

# Handle email verification
RewriteRule ^verify-email/(.*)$ /public/verify-email.php?token=$1 [L,QSA]

# Handle notifications endpoint
RewriteRule ^notifications$ /public/notifications.php [L,QSA]

# Handle health check
RewriteRule ^health-check$ /public/health-check.php [L]

# ==========================================
# ERROR HANDLING
# ==========================================

# Custom error pages
ErrorDocument 400 /public/error.php?code=400
ErrorDocument 401 /public/error.php?code=401
ErrorDocument 403 /public/error.php?code=403
ErrorDocument 404 /public/error.php?code=404
ErrorDocument 500 /public/error.php?code=500
ErrorDocument 503 /public/error.php?code=503

# ==========================================
# MIME TYPES (OVH Compatibility)
# ==========================================

<IfModule mod_mime.c>
    # Web fonts
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    
    # Progressive Web App
    AddType application/manifest+json .webmanifest
    AddType text/cache-manifest .appcache
    
    # Modern image formats
    AddType image/webp .webp
    AddType image/avif .avif
    
    # API responses
    AddType application/json .json
</IfModule>

# ==========================================
# SPECIAL RULES FOR OVH HOSTING
# ==========================================

# OVH specific PHP version selection (if needed)
# AddHandler application/x-httpd-php84 .php

# Prevent execution of uploaded files
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    <If "%{REQUEST_URI} =~ m#^/uploads/#">
        Require all denied
    </If>
</FilesMatch>

# Hotlink protection for images (optional)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.com [NC]
    RewriteCond %{REQUEST_URI} \.(gif|jpg|jpeg|png|webp)$ [NC]
    # RewriteRule . /public/assets/images/hotlink-denied.png [L]
</IfModule>

# ==========================================
# PERFORMANCE OPTIMIZATIONS
# ==========================================

# Enable Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Disable ETags (for better caching)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Optimize CSS and JS delivery
<FilesMatch "\.(css|js)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=2628000"
    </IfModule>
</FilesMatch>

