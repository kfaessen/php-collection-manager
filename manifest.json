{
  "name": "Collectiebeheer - Games, Films & Series",
  "short_name": "Collectiebeheer",
  "description": "Beheer je games, films en series collectie met barcode scanning en metadata lookup",
  "version": "2.0.0",
  "manifest_version": 2,
  "start_url": "/public/index.php",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#0d6efd",
  "background_color": "#ffffff",
  "lang": "nl",
  "dir": "auto",
  "categories": ["entertainment", "lifestyle", "productivity"],
  "screenshots": [
    {
      "src": "assets/screenshots/mobile-screenshot-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Collection overview on mobile"
    },
    {
      "src": "assets/screenshots/desktop-screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Collection management dashboard"
    }
  ],
  "icons": [
    {
      "src": "assets/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "assets/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/icons/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Item",
      "short_name": "Add",
      "description": "Quickly add a new item to your collection",
      "url": "/public/index.php?action=add",
      "icons": [
        {
          "src": "assets/icons/shortcut-add.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Scan Barcode",
      "short_name": "Scan",
      "description": "Scan a barcode to add items",
      "url": "/public/index.php?action=scan",
      "icons": [
        {
          "src": "assets/icons/shortcut-scan.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search Collection",
      "short_name": "Search",
      "description": "Search through your collection",
      "url": "/public/index.php?focus=search",
      "icons": [
        {
          "src": "assets/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/public/index.php",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+collection",
      "url": "/public/index.php?collection=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [],
  "iarc_rating_id": "",
  "file_handlers": [
    {
      "action": "/public/index.php",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "launch_type": "single-client"
    }
  ]
} 